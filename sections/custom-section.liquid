{% liquid
  assign full_width = section.settings.full_width
  assign section_height_desktop = section.settings.section_height_desktop
  assign section_height_mobile = section.settings.section_height_mobile
  assign desktop_image = section.settings.desktop_image
  assign mobile_image = section.settings.mobile_image
  assign blur_amount = section.settings.blur_amount
  assign overlay_color = section.settings.overlay_color
  assign border_radius = section.settings.border_radius
  assign background_color = section.settings.background_color
  assign section_padding = section.settings.section_padding
%}

<div style="
  width: {% if full_width %}100%{% else %}auto{% endif %};
  height: {{ section_height_desktop }}px;
  background-image: url({{ desktop_image | img_url: 'master' }});
  background-color: {{ background_color }};
  padding: {{ section_padding }}px;
  border-radius: {{ border_radius }}px;
  overflow: hidden;
">
  <div style="
    height: 100%;
    background-image: url({{ mobile_image | img_url: 'master' }});
    background-size: cover;
    filter: blur({{ blur_amount }}px);
  "></div>

  <div style="
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ overlay_color }};
  "></div>
  

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text' %}
        <div class="text-block">
          <h1 style="color: {{ block.settings.header_color }}; font-size: {{ block.settings.header_font_size }}px;">
            {{ block.settings.header }}
          </h1>
          <p style="color: {{ block.settings.paragraph_color }}; font-size: {{ block.settings.paragraph_font_size }}px;">
            {{ block.settings.paragraph }}
          </p>
        </div>
      {% when 'timer' %}
<div class="countdown" data-date="{{ block.settings.countdown_date | date: '%s' }}" data-text="{{ block.settings.countdown_text }}">
  <h1 class="countdown-value days"></h1>
  <h1 class="countdown-label">days</h1>
  <h1 class="countdown-value hours"></h1>
  <h1 class="countdown-label">hours</h1>
  <h1 class="countdown-value minutes"></h1>
  <h1 class="countdown-label">minutes</h1>
  <h1 class="countdown-value seconds"></h1>
  <h1 class="countdown-label">seconds</h1>
</div>



      {% when 'button' %}
        <a href="{{ block.settings.button_url }}" class="button" style="
          color: {{ block.settings.button_text_color }};
          background-color: {{ block.settings.button_background_color }};
          border-radius: {{ block.settings.button_border_radius }}px;
          border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
          font-size: {{ block.settings.button_font_size }}px;
        ">
          {{ block.settings.button_text }}
        </a>
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Custom Section",
  "class": "custom-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    },
    {
      "type": "range",
      "id": "section_height_desktop",
      "label": "Section height (desktop)",
      "min": 100,
      "max": 1000,
      "step": 10,
      "default": 500,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_height_mobile",
      "label": "Section height (mobile)",
      "min": 100,
      "max": 1000,
      "step": 10,
      "default": 300,
      "unit": "px"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Image (desktop)"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Image (mobile)"
    },
    {
      "type": "range",
      "id": "blur_amount",
      "label": "Image blur",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 10,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Custom Section",
      "category": "Custom"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text block",
      "settings": [
        {
          "type": "text",
          "id": "header",
          "label": "Header text",
          "default": "Your header text"
        },
        {
          "type": "color",
          "id": "header_color",
          "label": "Header color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "header_font_size",
          "label": "Header font size",
          "min": 10,
          "max": 72,
          "step": 1,
          "default": 36,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "paragraph",
          "label": "Paragraph text",
          "default": "Your paragraph text"
        },
        {
          "type": "color",
          "id": "paragraph_color",
          "label": "Paragraph color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "paragraph_font_size",
          "label": "Paragraph font size",
          "min": 10,
          "max": 36,
          "step": 1,
          "default": 16,
          "unit": "px"
        }
      ]
    },
    {
      "type": "timer",
      "name": "Timer block",
      "settings": [
        {
      "type": "text",
      "id": "countdown_date",
      "label": "Countdown Date",
      "default": "Dec 31, 2022"
    },
         {
      "type": "text",
      "id": "countdown_text",
      "label": "Countdown Text",
      "default": "Countdown has ended."
    }
      ]
    },
    {
      "type": "button",
      "name": "Button block",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Click me"
        },
        {
          "type": "text",
          "id": "button_url",
          "label": "Button URL",
          "default": "abc"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button text color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_background_color",
          "label": "Button background color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "button_border_radius",
          "label": "Button border radius",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "button_border_width",
          "label": "Button border width",
          "min": 0,
          "max": 10,
          "step": 1,
          "default": 0,
          "unit": "px"
        },
        {
          "type": "color",
          "id": "button_border_color",
          "label": "Button border color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "button_font_size",
          "label": "Button font size",
          "min": 10,
          "max": 36,
          "step": 1,
          "default": 16,
          "unit": "px"
        }
      ]
    }
  ]
}
{% endschema %}
