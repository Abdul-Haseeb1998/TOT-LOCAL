{% liquid
  assign full_width = section.settings.full_width
  assign section_height_desktop = section.settings.section_height_desktop
  assign section_height_mobile = section.settings.section_height_mobile
  assign desktop_image = section.settings.desktop_image
  assign mobile_image = section.settings.mobile_image
  assign blur_amount = section.settings.blur_amount
  assign overlay_color = section.settings.overlay_color
  assign border_radius = section.settings.border_radius
  assign background_color = section.settings.background_color
  assign section_padding = section.settings.section_padding
%}

<div style="
  width: {% if full_width %}100%{% else %}auto{% endif %};
  height: {{ section_height_desktop }}px;
  background-image: url({{ desktop_image | img_url: 'master' }});
  background-color: {{ background_color }};
  padding: {{ section_padding }}px;
  border-radius: {{ border_radius }}px;
  overflow: hidden;
">
  <div style="
    height: 100%;
    background-image: url({{ mobile_image | img_url: 'master' }});
    background-size: cover;
    filter: blur({{ blur_amount }}px);
  "></div>

  <div style="
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ overlay_color }};
  "></div>

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text' %}
        <div class="text-block">
          <h1 style="color: {{ block.settings.header_color }}; font-size: {{ block.settings.header_font_size }}px;">
            {{ block.settings.header }}
          </h1>
          <p style="color: {{ block.settings.paragraph_color }}; font-size: {{ block.settings.paragraph_font_size }}px;">
            {{ block.settings.paragraph }}
          </p>
        </div>
      {% when 'timer' %}
        <div class="countdown" data-date="{{ block.settings.countdown_date | date: '%s' }}">
          <span class="days"></span> days
          <span class="hours"></span> hours
          <span class="minutes"></span> minutes
          <span class="seconds"></span> seconds
        </div>
      {% when 'button' %}
        <a href="{{ block.settings.button_url }}" class="button" style="
          color: {{ block.settings.button_text_color }};
          background-color: {{ block.settings.button_background_color }};
          border-radius: {{ block.settings.button_border_radius }}px;
          border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
          font-size: {{ block.settings.button_font_size }}px;
        ">
          {{ block.settings.button_text }}
        </a>
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Custom Section",
  
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Set to full width",
      "default": false
    },
    {
      "type": "range",
      "id": "section_height_desktop",
      "label": "Section height (Desktop)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_height_mobile",
      "label": "Section height (Mobile)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "range",
      "id": "blur_amount",
      "label": "Image Blur",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border Radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section Padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "richtext",
          "id": "header",
          "label": "Header"
        },
        {
          "type": "richtext",
          "id": "paragraph",
          "label": "Paragraph"
        },
        {
          "type": "color",
          "id": "header_color",
          "label": "Header Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "paragraph_color",
          "label": "Paragraph Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "header_font_size",
          "label": "Header Font Size",
          "min": 0,
          "max": 72,
          "step": 1,
          "default": 36,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "paragraph_font_size",
          "label": "Paragraph Font Size",
          "min": 0,
          "max": 36,
          "step": 1,
          "default": 18,
          "unit": "px"
        }
      ]
    },
    {
      "type": "timer",
      "name": "Timer Block",
      "settings": [
        {
          "type": "text",
          "id": "countdown_date",
          "label": "Set date"
        },
        {
          "type": "text",
          "id": "countdown_text",
          "label": "Optional text when date is reached"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button Block",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "range",
          "id": "button_font_size",
          "label": "Button Font Size",
          "min": 0,
          "max": 36,
          "step": 1,
          "default": 18,
          "unit": "px"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button Text Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_background_color",
          "label": "Button Background Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "button_border_radius",
          "label": "Button Border Radius",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "button_border_width",
          "label": "Button Border Width",
          "min": 0,
          "max": 20,
          "step": 1,
          "default": 0,
          "unit": "px"
        },
        {
          "type": "color",
          "id": "button_border_color",
          "label": "Button Border Color",
          "default": "#000000"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "custom section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

